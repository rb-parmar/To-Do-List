@model To_Do_List.Models.ToDoList

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ToDoList</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ListName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ListName)
        </dd>

        <dt class="col-sm-2">
            Not Completed Items:
        </dt>
        @foreach(var item in Model.Items)
        {
            if (!item.IsComplete)
            {
                <dd class="col-sm-10">@item.ItemTitle</dd>
                <dd class="col-sm-10">@item.Date</dd>
                if(item.Description != null)
                {
                    <dd class="col-sm-10">@item.Description</dd>
                }
            }
        }
    </dl>
    <a asp-controller="ToDoItems" asp-action="Create" class="btn btn-primary">Add New Item</a>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger ms-2 me-2">Delete</a> |
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
