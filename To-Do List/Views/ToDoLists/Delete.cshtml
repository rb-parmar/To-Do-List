@model To_Do_List.Models.ToDoList

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete List</h1>

<h3>Are you sure you want to delete this?</h3>
<h5>*All TO-DO items will be deleted as well</h5>
<div>
    <br />
    <br />
    <h4>ToDoList</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ListName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ListName)
        </dd>
    </dl>
    <dt class="col-sm-2">
        Not Completed Items:
    </dt>
    <table class="table table-hover ms-5">
        <thead>
            <tr>
                <th scope="col">Item Name</th>
                <th scope="col">Date Created</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr class="table-active">
                    <th scope="row">@item.ItemTitle</th>
                    <td>@item.Date</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
    
    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger me-2" /> |
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
